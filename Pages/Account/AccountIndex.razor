@using PersonalFinance.Helpers.APIs;
@using PersonalFinance.Helpers;
@using PersonalFinance.Helpers.Routes;
@using PersonalFinance.Models;
@attribute [
    Route(AccountsRoutes.Index)
]
@inherits General

@if (Loading) {
    <p>Carregando...</p>
}
else {
    <p>
        <a href="@AccountsRoutes.GoToAddition()">
            Nova Conta
        </a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Descrição
                </th>
                <th>
                    Saldo Inicial
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Accounts) {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.OpeningBalance
                </td>
                <td>
                    <a href="@AccountsRoutes.GoToEdition(item.Id)">Editar</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}

@code{
    List<Account> Accounts { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        Accounts = await AccountsAPI.GetSearch();
    }

    #region VALIDATIONS
    bool Loading => Accounts is null;
    #endregion
}
